{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<div class="row">
  {% for product in productInHome %}
  <div class="col-md-4 s12 m4">
    <div class="card">
      <div class="card-image">
        <img src="{{asset('images/jeux/')}}{{product.img}}" height="250">
        <a href="{{ path('app_product_show', {'id': product.id}) }}"
          class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
      </div>
      <div class="card-content">
        <span class="card-title">{{product.titre}}</span>
        <button class="btn waves-effect waves-light">
         
          {% if product.prix %}
          {{product.prix}}
           <i class="fa-solid fa-euro-sign"></i>
          {% else %}
          80
          {% endif %}
        </button>
        <a href="{{path('app_ajout_panier', {'id': product.id}) }}">
          <button class="">
            <i class="fa-solid fa-cart-shopping"></i>
          </button>
        </a>
      </div>
    </div>
  </div>
  {% else %}
  Pas de jeu pour le moment
  {% endfor %}
</div>
{% endblock %}