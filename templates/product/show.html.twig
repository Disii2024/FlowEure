{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ product.titre }}</td>
            </tr>
            <tr>
                <th>Descrip</th>
                <td>{{ product.descrip }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ product.img }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ product.qte }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.prix }}</td>
            </tr>
        </tbody>            
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}

    <h1>Create new Commentaire</h1>

    {{ include('commentaire/_form.html.twig') }}

    {% for commentaire in commentaires %}
        {{commentaire.contenu}} par
        {{commentaire.auteur.pseudo}}
    {% endfor %}
{% endblock %}
