        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ product.titre }}</td>
        </tr>
        <tr>
            <th>Descrip</th>
            <td>{{ product.descrip }}</td>
        </tr>
        <tr>
            <th>Img</th>
            <td>{{ product.img }}</td>
        </tr>
        <tr>
            <th>Qte</th>
            <td>{{ product.qte }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ product.prix }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_product_index') }}">back to list</a>

