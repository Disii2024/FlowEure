<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Italiana&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    {% block stylesheets %}
    <link rel="stylesheet" href="/css/style.css">

    {% endblock %}

    {% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body>
    <link rel="stylesheet" href="/css/home.css">
    <header>
        <div>
            <a href="{{path('app_home')}}"><img src="{{asset('img/logo.svg')}}" alt=""></a>
        </div>
        <div id="items-nav">
            <nav>
                <ul>
                    <li><a href="{{path('app_home')}}">Acceuil</a></li>
                    <li><a href="{{path('app_product_index')}}">Nos offres</a></li>
                    {# <li><a href="{{path('')}}">Contact</a></li> #}
                    <li><a href="{{path('app_panier')}}"><i class="fa-solid fa-cart-shopping"></i></a></li>
         {% if app.user %}
                        {% for role in app.user.roles %}
                            {% if role == "ROLE_ADMIN" %}
                                <li><a href="{{path('admin')}}">Dashboard</a></li>
                                {% else %}
                            {% endif %}
                        {% endfor %}
                {% endif %}


                </ul>

            </nav>

            <ul>
                {% if app.user %}


                <li>
                    <a href="/profile"><img src="{{asset('images/avatars/')}}{{app.user.avatar}}"
                            class="rounded-circle shadow-4" style="width: 50px;" alt="Avatar" /> {{app.user.pseudo}}</a>
                <li><a href="{{path('app_logout')}}">Deconnexion</a></li>

                </li>
                {% else %}
                <li><a href="{{path('app_login')}}">Connexion</a></li>
                <li><a href="{{path('app_register')}}">Inscription</a></li>
                {% endif %}
            </ul>

        </div>
    </header>
    <main>
{% block body %}
{% endblock %}
    </main>
    <footer>
        <div class="logo-nav">
            <a href="{{path('app_home')}}"><img src="{{asset('img/logo.svg')}}" alt=""></a>
        </div>
        <nav>
            <a href="">Mentions légales</a>
            <a href="">CGV</a>
        </nav>
        <div id="reseaux">
            <a href=""><img src="{{asset('img/logo_rs/instagram.png')}}" alt=""></a>
            <a href=""><img src="{{asset('img/logo_rs/facebook.png')}}" alt=""></a>
            <a href=""><img src="{{asset('img/logo_rs/twitter.png')}}" alt=""></a>
        </div>
    </footer>
</body>

</html>